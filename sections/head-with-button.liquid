{{ 'head-with-button.css' | asset_url | stylesheet_tag }}
<div class="shop-by-concern">
<div class="container">
<div class=""Shop__wrapper>
<p class="shop__text">{{section.settings.text}}</p>
  <h2 class="shop__heading">{{ section.settings.heading }}</h2>
  <div class="concern">
  <div class="concern-buttons">
    {% for block in section.blocks %}
      <button onclick="location.href='{{ block.settings.button_url }}'" class="concern-button">
        {{ block.settings.button_text }}
      </button>
    {% endfor %}
  </div>
  </div>
  </div>
</div>
</div>

{% schema %}
{
  "name": "Shop by Concern",
  "settings": [
     {
      "type": "textarea",
      "id": "text",
      "label": "Section subHeading",
      "default": "write something"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Got a concern?"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Button"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL",
          "default": "/"  /* Ensure this is a string and valid path */
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Concern",
      "category": "Custom"
    }
  ]
}
{% endschema %}

