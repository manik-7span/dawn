<div class="background-heading-section" style="background-image: url({{ section.settings.background_image | image_url }});">
  <div class="container">
    <h2 class="heading">{{ section.settings.heading }}</h2>
  </div>
</div>
{% schema %}
{
  "name": "Background Image with Heading",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Upload the background image for the section."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    }
  ],
  "presets": [
    {
      "name": "Background Image with Heading",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
