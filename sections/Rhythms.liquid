{% schema %}
{
  "name": "Rhythms Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Meet the Rhythms"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "Explore our carefully crafted skincare routines designed to complement your skin's natural needs throughout the day."
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Card Image"
        },
        {
          "type": "text",
          "id": "header",
          "label": "Header",
          "default": "Morning"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Rise"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Protecting and shielding the skin from environmental stressors that cause damage."
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button-text",
          "label": "Button Text",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rhythms Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
<section class="rhythms">
<div class="rhythm__section">
<div class="container">
<div class="rhythm__info">
  <h2>{{ section.settings.title }}</h2>
  <p>{{ section.settings.description }}</p>
  </div>
  <div class="rhythms__cards">
    {% for block in section.blocks %}
      <div class="rhythm__product-card">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}">
        {% endif %}
        <div class="rhythm__product-card-header">{{ block.settings.header }}</div>
        <div class="rhythm__product-card-body">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
          <div class="rhythm__product-card-footer">
            <a href="{{ block.settings.button_link }}" class="rhythm__footer-button">{{ block.settings.button-text }}</a>
          </div>
      </div>
    {% endfor %}
  </div>
</div>
</div>
</section>
