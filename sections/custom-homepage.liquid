
{{ 'custom-homepage.css' | asset_url | stylesheet_tag }}
<section class="Custom__homepage">
<div class="hero">
  <div class="container">
    <div class="hero-wrapper">
      <div class="hero__left">
        <h2 class="hero__heading">{{ section.settings.heading }}</h2>
        <p class="hero__text">{{ section.settings.text }}</p>
        <a href="{{ section.settings.button }}" class="custom__button">{{ section.settings.button }}</a>
      </div>
      <div class="hero__right">
        {% if section.settings.image %}
          <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.heading }}">
        {% endif %}
      </div>
    </div>
  </div>
  </div>
</section>
{% schema %}
{
  "name": "Custom-homepage",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Add your description or text here."
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button Text",
      "default": "Click Me"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Custom-homepage",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}