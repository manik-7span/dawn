{{ 'custom-footer.css' | asset_url | stylesheet_tag }}
<section class="oteria-footer">
  <div class="footer-container">
    <!-- Left Side: Newsletter -->
    <div class="footer-newsletter">
      <h2>{{ section.settings.newsletterhead }}</h2>
      <p>{{ section.settings.newsletter }}</p>
      <form method="POST" action="/contact#footer">
        <input type="email" name="email" placeholder="{{ section.settings.newsholder }}" required>
        <button type="submit">{{ section.settings.newsbutton }}</button>
      </form>
    </div>

    <!-- Right Side: Links -->
    <div class="footer-links">
      {% for block in section.blocks %}
        <div class="footer-column">
          <h4>{{ block.settings.column }}</h4>
          <ul>
            {% for link in block.settings.links %}
              <li><a href="{{ link.link_url }}">{{ link.link_text }}</a></li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Copyright and Social Icons -->
  <div class="footer-bottom">
    <p>{{ section.settings.copyright }}</p>
    <div class="social-icons">
      {% if section.settings.facebook_link %}
        <a href="{{ section.settings.facebook }}" target="_blank">
          <img src="{{ 'facebook-icon.svg' | asset_url }}" alt="Facebook">
        </a>
      {% endif %}
      {% if section.settings.instagram_link %}
        <a href="{{ section.settings.instagram }}" target="_blank">
          <img src="{{ 'instagram-icon.svg' | asset_url }}" alt="Instagram">
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Footer Section",
  "settings": [
    {
      "type": "text",
      "id": "newsletterhead",
      "label": "Newsletter Heading",
      "default": "Stay updated with Oteria"
    },
    {
      "type": "textarea",
      "id": "newsletter",
      "label": "Newsletter Description",
      "default": "Be the first to know about new product launches, exclusive offers, and skincare tips from our experts."
    },
    {
      "type": "text",
      "id": "newsholder",
      "label": "Newsletter Input Placeholder",
      "default": "EMAIL ADDRESS"
    },
    {
      "type": "text",
      "id": "newsbutton",
      "label": "Newsletter Button Text",
      "default": "SUBMIT"
    },
    {
      "type": "url",
      "id": "facebook",
      "label": "Facebook URL",
    
    },
    {
      "type": "url",
      "id": "instagram",
      "label": "Instagram URL",
      
    },
    {
      "type": "text",
      "id": "copyright",
      "label": "Copyright Text",
      "default": "Copyright 2023 Oteria"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Footer Column",
      "settings": [
        {
          "type": "text",
          "id": "column",
          "label": "Column Title",
          "default": "Need Help?"
        },
        {
          "type": "link_list",
          "id": "links",
          "label": "Menu Links"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}

