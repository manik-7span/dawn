    gap: 30px;
}
.text__info{
  width:100%;
}
.icon-grid{
  width:100%;
}
.text__image{
  display:none;
}
  }
  @media screen and (max-width:767px){
    .icon-grid{
      flex-direction:column;
      gap:38px;
    }
    .icon-item{
      width:100%;
    }
